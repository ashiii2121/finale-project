# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/react-ashion
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/react-ashion

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# CORS Configuration
CLIENT_URL=http://localhost:5173
ADMIN_URL=http://localhost:5173/admin

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Configuration
ADMIN_EMAIL=admin@ashion.com
ADMIN_PASSWORD=Admin@123456

# Email Configuration (Optional - for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@ashion.com
